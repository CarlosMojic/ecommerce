@model ecomerce.Models.departamentos

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center text-danger mb-4">@ViewBag.Title</h2>

<div class="container">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title">Eliminar Departamento</h4>
        </div>
        <div class="card-body">
            <h3 class="text-warning">¿Estás seguro de que quieres eliminar este departamento?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.nombre_departamento)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.nombre_departamento)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions text-center">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg shadow-lg me-2" /> |
                    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-info btn-sm" })
                </div>
            }
        </div>
    </div>
</div>
