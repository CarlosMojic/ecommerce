@model ecomerce.Models.departamentos

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center text-primary mb-4">@ViewBag.Title</h2>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title">Detalles del Departamento</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.nombre_departamento)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.nombre_departamento)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.departamento_id }, new { @class = "btn btn-warning btn-sm me-2" }) |
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-info btn-sm" })
            </p>
        </div>
    </div>
</div>
