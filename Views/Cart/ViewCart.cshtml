@using ecomerce
@model List<ecomerce.Models.Product>

<h2 class="section-title">Detalle de Compra</h2>

@if (Model.Count == 0)
{
    <p class="empty-cart-message">No hay productos en el carrito.</p>
}
else
{
    <div class="cart-container">

        <!-- Sección de Productos -->
        <div class="cart-details">
            @foreach (var product in Model)
            {
                <div class="cart-item">
                    <div class="item-info">
                        <img src="@product.ImageUrl"
                             alt="@product.Name"
                             class="product-image" />
                        <div class="product-details">
                            <h4 class="product-brand">@product.Brand</h4>
                            <p class="product-name">@product.Name</p>
                        </div>
                    </div>

                    <div class="item-price">
                        <p>Precio: $@product.Price</p>
                    </div>

                    <div class="item-remove">
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = product.ProductId })"
                           class="remove-btn">
                            Eliminar
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Sección de Pago -->
        <div class="payment-section">
            <h3 class="payment-title">Detalle de Tarjeta</h3>

            <div class="card-details">
                <!-- Tipo de Tarjeta -->
                <label class="card-type-label">Tipo de tarjeta</label>
                <div class="card-types">
                    <div class="card-option">
                        <input type="radio"
                               id="mastercard"
                               name="cardType"
                               value="mastercard"
                               class="card-radio" />
                        <label for="mastercard" class="card-label">
                            <img src="/images/MasterCard_Logo.svg.png"
                                 alt="MasterCard"
                                 class="card-image" />
                            MasterCard
                        </label>
                    </div>

                    <div class="card-option">
                        <input type="radio"
                               id="visa"
                               name="cardType"
                               value="visa"
                               class="card-radio" />
                        <label for="visa" class="card-label">
                            <img src="/images/VISA-Logo-2014.png"
                                 alt="Visa"
                                 class="card-image" />
                            Visa
                        </label>
                    </div>
                </div>

                <!-- Datos de la Tarjeta -->
                <label for="cardHolderName" class="input-label">Nombre del Titular</label>
                <input type="text"
                       id="cardHolderName"
                       placeholder="USUARIO PRUEBAS"
                       class="card-input"
                       required />

                <label for="cardNumber" class="input-label">Número de tarjeta</label>
                <input type="text"
                       id="cardNumber"
                       placeholder="1234 5678 1234 5678"
                       class="card-input"
                       required />

                <div class="expiry-cvv">
                    <div>
                        <label for="expiryDate" class="input-label">Vigencia</label>
                        <input type="text"
                               id="expiryDate"
                               placeholder="MM/AA"
                               class="card-input"
                               required />
                    </div>

                    <div>
                        <label for="cvv" class="input-label">CVV</label>
                        <input type="text"
                               id="cvv"
                               placeholder="123"
                               class="card-input"
                               required />
                    </div>
                </div>

                <!-- Total a Pagar -->
                <h4 class="total-price">Total a Pagar: $@Model.Sum(p => p.Price)</h4>
                <button class="btn btn-primary" id="processPaymentBtn" disabled>Procesar Pago</button>
            </div>
        </div>
    </div>

    <!-- Modal de Éxito -->
    <div id="successModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Pago realizado con éxito</h2>
            <p>Gracias por tu compra. Tu pago ha sido procesado correctamente.</p>
            <button class="btn btn-success" onclick="closeModal()">Cerrar</button>
        </div>
    </div>

    <style>
        /* Estilos Generales */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 0;
        }

        .section-title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .empty-cart-message {
            text-align: center;
            font-size: 1.2rem;
            color: #555;
        }

        .cart-container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
        }

        .cart-details, .payment-section {
            width: 48%;
        }

        /* Sección de Producto */
        .cart-item {
            display: flex;
            justify-content: space-between;
            padding: 15px;
            background-color: white;
            margin-bottom: 10px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .item-info {
            display: flex;
        }

        .product-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            margin-right: 15px;
        }

        .product-details {
            display: flex;
            flex-direction: column;
        }

        .product-brand {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-name {
            color: #777;
        }

        .item-price, .item-remove {
            text-align: center;
        }

        .remove-btn {
            color: red;
            cursor: pointer;
            text-decoration: underline;
        }

        /* Sección de Pago */
        .payment-title {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .card-details {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .input-label {
            font-size: 0.9rem;
            margin-bottom: 5px;
            display: block;
        }

        .card-input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .card-types {
            display: flex;
            justify-content: flex-start;
            margin-bottom: 15px;
        }

        .card-option {
            display: flex;
            align-items: center;
        }

        .card-label {
            margin-left: 10px;
        }

        .total-price {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:disabled {
                background-color: #ccc;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width: 400px;
        }

        .close {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .show {
            display: flex !important;
        }

        /* Ajuste de tamaño de las tarjetas */
        .card-image {
            width: 50px; /* Puedes ajustar este valor según lo que necesites */
            height: auto;
            object-fit: contain;
        }
    </style>

    <script>
        // Función para validar los campos
        function validateFields() {
            const cardHolderName = document.getElementById('cardHolderName').value.trim();
            const cardNumber = document.getElementById('cardNumber').value.trim();
            const expiryDate = document.getElementById('expiryDate').value.trim();
            const cvv = document.getElementById('cvv').value.trim();

            // Verificamos si todos los campos están llenos
            const allFieldsFilled = cardHolderName && cardNumber && expiryDate && cvv;

            // Activamos o desactivamos el botón de pago
            document.getElementById('processPaymentBtn').disabled = !allFieldsFilled;
        }

        // Mostrar el modal
        function showModal() {
            document.getElementById('successModal').classList.add('show');
        }

        // Cerrar el modal
        function closeModal() {
            document.getElementById('successModal').classList.remove('show');
        }

        // Detectar cambios en los campos
        document.getElementById('cardHolderName').addEventListener('input', validateFields);
        document.getElementById('cardNumber').addEventListener('input', validateFields);
        document.getElementById('expiryDate').addEventListener('input', validateFields);
        document.getElementById('cvv').addEventListener('input', validateFields);

        // Simulación de pago
        document.getElementById('processPaymentBtn').addEventListener('click', function (event) {
            event.preventDefault();

            // Validación de campos vacíos
            if (document.getElementById('processPaymentBtn').disabled) {
                alert('Aún hay campos sin rellenar.');
            } else {
                // Llamada AJAX para vaciar el carrito
                fetch('@Url.Action("ClearCart", "Cart")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        showModal(); // Mostrar el modal de éxito
                        // Limpiar la vista del carrito
                        document.querySelector('.cart-details').innerHTML = '<p>No hay productos en el carrito.</p>';
                        document.querySelector('.payment-section h4').innerText = 'Total a Pagar: $0.00';
                    } else {
                        alert('Hubo un error al procesar el pago.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Hubo un error en la solicitud.');
                });
            }
        });
    </script>
}
