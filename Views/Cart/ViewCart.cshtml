<!-- File: Views/Cart/ViewCart.cshtml -->
@using ecomerce
@model List<ecomerce.Models.Product>

<h2>Detalle de Compra</h2>

@if (Model.Count == 0)
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <div class="cart-container">
        <div class="cart-details">
            @foreach (var product in Model)
            {
                <div class="cart-item">
                    <div class="item-info">
                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                        <div class="product-details">
                            <h4>@product.Brand</h4>
                            <p>@product.Name</p>
                        </div>
                    </div>
                    <div class="item-price">
                        <p>Precio: $@product.Price</p> <!-- Cambio a dólares -->
                    </div>
                    <div class="item-remove">
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = product.ProductId })" class="remove-btn">Eliminar</a>
                    </div>
                </div>
            }
        </div>

        <div class="payment-section">
            <h3>Detalle de Tarjeta</h3>
            <div class="card-details">
                <label>Tipo de tarjeta</label>
                <div class="card-types">
                    <img src="/images/mastercard.png" alt="MasterCard" />
                    <img src="/images/visa.png" alt="Visa" />
                </div>
                <label>Nombre del Titular</label>
                <input type="text" placeholder="USUARIO PRUEBAS" class="card-input" />

                <label>Número de tarjeta</label>
                <input type="text" placeholder="1234 5678 1234 5678" class="card-input" />

                <div class="expiry-cvv">
                    <div>
                        <label>Vigencia</label>
                        <input type="text" placeholder="MM/AA" class="card-input" />
                    </div>
                    <div>
                        <label>CVV</label>
                        <input type="text" placeholder="123" class="card-input" />
                    </div>
                </div>

                <h4>Total a Pagar: $@Model.Sum(p => p.Price)</h4> <!-- Cambio a dólares -->
                <button class="btn btn-primary">Procesar Pago</button>
            </div>
        </div>
    </div>
}

<style>
    .cart-container {
        display: flex;
        gap: 20px;
    }

    .cart-details {
        flex: 2;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .item-info {
        display: flex;
        align-items: center;
    }

    .product-image {
        width: 50px;
        margin-right: 10px;
    }

    .product-details h4 {
        margin: 0;
        font-size: 1rem;
    }

    .item-price, .item-remove {
        display: flex;
        align-items: center;
    }

    .remove-btn {
        color: red;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .payment-section {
        flex: 1;
        padding: 20px;
        border: 1px solid #ddd;
    }

    .card-details label {
        display: block;
        margin-top: 10px;
    }

    .card-input {
        width: 100%;
        padding: 5px;
        margin-top: 5px;
        margin-bottom: 10px;
    }

    .expiry-cvv {
        display: flex;
        gap: 10px;
    }

    .card-types img {
        width: 50px;
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        width: 100%;
    }
</style>
