<!-- File: Views/Cart/ViewCart.cshtml -->
@model List<ecomerce.Models.Product>
<h2>Tu carrito de compras</h2>

@if (Model.Count == 0)
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>$@product.Price</td>
                    <td>
                        <!-- Enlace para eliminar el producto -->
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = product.ProductId })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Enlace para continuar con la compra (esto puede redirigir a una página de pago, por ejemplo) -->
<a href="#" class="btn btn-success">Ir a pagar</a>
