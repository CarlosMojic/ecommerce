

@{
    ViewBag.Title = "Home Page";
}

<main>
    <!-- Hero Section: Banner de bienvenida -->
    <section class="hero bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Bienvenido a nuestra tienda</h1>
            <p class="lead">Encuentra los mejores productos en categorías como accesorios, ropa, herramientas y más.</p>
            <a href="#categories" class="btn btn-light btn-lg">Ver productos</a>
        </div>
    </section>

    <!-- Sección de categorías -->
    <section id="categories" class="container py-5">
        <h2 class="text-center mb-4">Categorías</h2>
        <div class="row">
            <!-- Categoría 1: Tecnologia -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/images/tecfondo.png" class="card-img-top" alt="Tecnologia">
                    <div class="card-body text-center">
                        <h5 class="card-title">Tecnologia</h5>
                        <p class="card-text">Encuentra lo mejor en tecnologia para tu día a día.</p>
                        <a href="@Url.Action("home", "SeccionTec")" class="btn btn-outline-primary">Ver Tecnologia</a>
                    </div>
                </div>
            </div>
            <!-- Categoría 2: Ropa -->

            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/images/tecfondo.png" class="card-img-top" alt="Tecnologia">
                    <div class="card-body text-center">
                        <h5 class="card-title">Ropa</h5>
                        <p class="card-text">Encuentra lo mejor en tecnologia para tu día a día.</p>
                        <a href="@Url.Action("home", "SeccionRopa")" class="btn btn-outline-primary">Ver Ropa</a>
                    </div>
                </div>
            </div>

            <!-- Categoría 3: Herramientas -->

            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/images/tecfondo.png" class="card-img-top" alt="Tecnologia">
                    <div class="card-body text-center">
                        <h5 class="card-title">Herramientas</h5>
                        <p class="card-text">Encuentra lo mejor en tecnologia para tu día a día.</p>
                        <a href="@Url.Action("home", "SeccionHer")" class="btn btn-outline-primary">Ver Herramientas</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de deslizador de imágenes (Carrusel con Fade) -->
    <section id="carouselSection" class="container py-5">
        <h2 class="text-center mb-4">Descubre nuestras ofertas</h2>
        <div id="productCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Imagen 1 -->
                <div class="carousel-item active">
                    <img src="https://via.placeholder.com/1200x500?text=Oferta+1" class="d-block w-100" alt="Oferta 1">
                </div>
                <!-- Imagen 2 -->
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1200x500?text=Oferta+2" class="d-block w-100" alt="Oferta 2">
                </div>
                <!-- Imagen 3 -->
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1200x500?text=Oferta+3" class="d-block w-100" alt="Oferta 3">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <!-- Sección de productos destacados -->
    <section class="container py-5">
        <h2 class="text-center mb-4">Productos Destacados</h2>
        <div class="row">
            <!-- Producto 1 -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Producto 1">
                    <div class="card-body">
                        <h5 class="card-title">Producto 1</h5>
                        <p class="card-text">Descripción breve del producto.</p>
                        <p class="card-text"><strong>$19.99</strong></p>
                        <a href="#" class="btn btn-primary">Agregar al carrito</a>
                    </div>
                </div>
            </div>
            <!-- Producto 2 -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Producto 2">
                    <div class="card-body">
                        <h5 class="card-title">Producto 2</h5>
                        <p class="card-text">Descripción breve del producto.</p>
                        <p class="card-text"><strong>$29.99</strong></p>
                        <a href="#" class="btn btn-primary">Agregar al carrito</a>
                    </div>
                </div>
            </div>
            <!-- Producto 3 -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Producto 3">
                    <div class="card-body">
                        <h5 class="card-title">Producto 3</h5>
                        <p class="card-text">Descripción breve del producto.</p>
                        <p class="card-text"><strong>$39.99</strong></p>
                        <a href="#" class="btn btn-primary">Agregar al carrito</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de llamada a la acción -->
    <section class="cta bg-secondary text-white text-center py-5">
        <div class="container">
            <h2 class="display-4">¿Listo para comprar?</h2>
            <p class="lead">Explora nuestra tienda, elige tus productos y disfruta de una experiencia de compra única.</p>
            <a href="#categories" class="btn btn-light btn-lg">Ver productos</a>
        </div>
    </section>

    <!-- Pie de página -->
    <footer class="bg-dark text-white text-center py-4">
        <div class="container">
            <p class="mb-2" style="font-size: 0.9rem;">&copy; 2024 <strong>Tu Tienda Ecommerce</strong>. Todos los derechos reservados.</p>
            <div class="social-icons">
                <a href="#" class="text-white mx-2" style="font-size: 1.5rem;"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white mx-2" style="font-size: 1.5rem;"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white mx-2" style="font-size: 1.5rem;"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white mx-2" style="font-size: 1.5rem;"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <p class="mt-3" style="font-size: 0.8rem;">Diseñado con ♥ por Tu Empresa</p>
        </div>
    </footer>


</main>

<!-- Bootstrap 5 JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
