@{
    ViewBag.Title = "Panel de Control";
    ViewBag.HideNavbar = true;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        /* Barra lateral estilizada */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            background-color: #1a1a1a;
            color: #fff;
            padding-top: 30px;
            transition: width 0.3s;
        }

        .sidebar a {
            padding: 15px 20px;
            font-size: 18px;
            color: #ddd;
            text-decoration: none;
            display: block;
            margin: 12px 0;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar a:hover {
            background-color: #007bff;
            color: #fff;
        }

        .sidebar .active {
            background-color: #007bff;
            color: #fff;
        }

        .sidebar .sidebar-header {
            font-size: 1.5rem;
            color: #fff;
            padding-left: 20px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .sidebar .logout-btn {
            padding: 10px;
            background-color: #dc3545;
            color: white;
            border: none;
            width: 100%;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
        }

        .sidebar .logout-btn:hover {
            background-color: #c82333;
        }

        .content {
            margin-left: 260px;
            padding: 40px;
        }

        .content h2 {
            margin-top: 20px;
            font-size: 2.5rem;
            font-weight: 600;
            color: #343a40;
        }

        .content p {
            font-size: 1.1rem;
            color: #6c757d;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            transition: box-shadow 0.3s ease;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-radius: 10px 10px 0 0;
            font-size: 1.2rem;
            font-weight: 500;
        }

        .card-body {
            padding: 25px;
            background-color: #ffffff;
            border-radius: 0 0 10px 10px;
        }

        .card-body p {
            font-size: 1rem;
            color: #6c757d;
        }

        .btn-action {
            width: 100%;
            font-size: 1.1rem;
            padding: 12px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
            font-weight: 500;
            transition: background-color 0.3s;
        }

        .btn-action:hover {
            background-color: #0056b3;
            color: white;
        }

        /* Estilo para los íconos */
        .icon {
            margin-right: 10px;
        }

        /* Responsividad */
       
        }
    </style>
</head>
<body>

    <!-- Barra lateral -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>Panel de Control</h2>
        </div>

        <!-- Enlace a la tienda -->
        <a href="@Url.Action("Index", "Home")" class="sidebar-link active" aria-label="Ver Tienda">
            <i class="icon fas fa-home"></i> Ver Tienda
        </a>
        <!-- Enlace al panel de administración -->
        <a href="@Url.Action("Index", "Admin")" class="sidebar-link" aria-label="Panel de Administración">
            <i class="icon fas fa-cogs"></i> Panel de Administración
        </a>

        <!-- Separador -->
        <hr class="sidebar-divider">

    </div>


    <!-- Área de contenido -->
    <div class="content">
        <h2>@ViewBag.Title</h2>
        <p>Bienvenido al panel de control, donde puedes gestionar empleados y usuarios de manera eficiente.</p>

        <!-- Cards con botones de acción -->
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Gestión de Cargos</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Accede a las herramientas para gestionar los Cargos de la tienda.</p>
                        <a href="@Url.Action("index", "cargos")" class="btn btn-action">Gestionar Cargos</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Gestión de Departamentos</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Accede a las herramientas para gestionar los Departamentos de la tienda.</p>
                        <a href="@Url.Action("index", "departamentos")" class="btn btn-action">Gestionar Departamentos</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Gestión de Empleados</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Accede a las herramientas para gestionar los Empleados registrados en el sistema.</p>
                        <a href="@Url.Action("index", "usuarios")" class="btn btn-action">Gestionar Empleados</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Agregar scripts de Bootstrap y FontAwesome para íconos -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
