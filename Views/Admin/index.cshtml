@{
    ViewBag.Title = "Panel de Control";
    ViewBag.HideNavbar = true;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Barra lateral estilizada */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            color: #fff;
            padding-top: 20px;
        }

            .sidebar a {
                padding: 12px 20px;
                font-size: 18px;
                color: #ddd;
                text-decoration: none;
                display: block;
                margin: 10px 0;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    color: #fff;
                }

            .sidebar .active {
                background-color: #007bff;
                color: #fff;
            }

        .content {
            margin-left: 260px;
            padding: 40px;
        }

            .content h2 {
                margin-top: 20px;
                font-size: 2.5rem;
                font-weight: 600;
                color: #343a40;
            }

            .content p {
                font-size: 1.2rem;
                color: #6c757d;
            }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
        }

        .card-body {
            padding: 20px;
        }

        .btn-action {
            width: 100%;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>

    <!-- Barra lateral -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")" class="active">Ver Tienda</a>
        <form action="@Url.Action("Logout", "Account")" method="post" class="nav-link">
            <button type="submit" class="btn btn-link text-white">Cerrar Sesión</button>
        </form>
        <a href="@Url.Action("Index", "Admin")">Panel de Administración</a>
        <hr class="text-white">
    </div>

    <!-- Área de contenido -->
    <div class="content">
        <h2>@ViewBag.Title</h2>
        <p>Bienvenido al panel de control, donde puedes gestionar empleados y usuarios de manera eficiente.</p>

        <!-- Cards con botones de acción -->
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Gestión de Empleados</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Accede a las herramientas para gestionar los empleados de la tienda.</p>
                        <a href="@Url.Action("GestionEmpleados", "Admin")" class="btn btn-primary btn-action">Gestionar Empleados</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Gestión de Usuarios</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Accede a las herramientas para gestionar los usuarios registrados en el sistema.</p>
                        <a href="@Url.Action("GestionUsuarios", "Admin")" class="btn btn-primary btn-action">Gestionar Usuarios</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Agregar scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
