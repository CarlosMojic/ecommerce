<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Seleccionamos todos los formularios de agregar al carrito
        $('.add-to-cart-form').on('submit', function (e) {
            e.preventDefault();  // Evitar que el formulario recargue la página

            var form = $(this);
            var productId = form.data('product-id'); // Obtener el ID del producto desde el atributo data-product-id
            var url = form.attr('action');
            var data = form.serialize();  // Obtener los datos del formulario

            // Hacer la solicitud AJAX para agregar el producto al carrito
            $.post(url, data, function (response) {
                alert('¡Producto agregado al carrito con éxito! Producto ID: ' + productId);
            }).fail(function () {
                alert('Hubo un problema al agregar el producto al carrito.');
            });
        });
    });
</script>
